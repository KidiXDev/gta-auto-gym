{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "noEmit": true,
    "moduleDetection": "force",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["**/*.ts", "**/*.mts", ".config/*.d.ts"]
}
